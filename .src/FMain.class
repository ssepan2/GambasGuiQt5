Public Sub Form_Open()
   Dim Result As String
 
    StatusLabel.Text = "Starting Form_Open..."
    Try controller = New Controller
        Result = "Finished Form_Open."
    Finally
        StatusLabel.Text = Result
    Catch
        Result = "Error on Form_Open!"
End

Public Sub Form_Close()

    controller = Null

End

