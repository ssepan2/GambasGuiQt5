Public Function FormatError() As String

    Dim sResult As String = Null

    sResult &= Subst("Error: &1\r\nLine: &2\r\nTrace: \r\n", Error.Text, Error.Where)
    For Each sLine As String In Error.Backtrace
        sResult &= Subst("&1\r\n", sLine)
    Next
    Return sResult
Catch 'ex As Exception
    Debug Log.FormatError() 'Error.Text 'TODO:get this dump into a log file
    Debug Error.Text
    Return ""

End
